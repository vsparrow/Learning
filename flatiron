                                def edit  @post = Post.find(params[:id]) end

                                def update
                                  @post = Post.find(params[:id])
                                  @post.update(params.require(:post))#@post.update(title: params[:title], description: params[:description])
                                  redirect_to post_path(@post)
                                end

